{
  "compilerOptions": {
    "target": "ESNext",                  // Configuração do ESNext para suporte a recursos modernos
    "module": "ESNext",                  // Módulos ESNext para compatibilidade com import/export
    "moduleResolution": "node",          // Resolução de módulo semelhante ao Node.js
    "esModuleInterop": true,             // Permite importar módulos CommonJS
    "strict": true,                      // Habilita verificações de tipo rigorosas
    "skipLibCheck": true,                // Ignora checagem de tipo de bibliotecas para aceleração
    "forceConsistentCasingInFileNames": true, // Garantir que o uso de maiúsculas/minúsculas seja consistente
    "outDir": "./dist",                  // Pasta de saída para arquivos compilados
    "baseUrl": ".",                      // Base do caminho
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,           // Permite importar arquivos JSON
    "allowSyntheticDefaultImports": true // Permite imports padrão mesmo que o módulo não tenha um default
  },
  "include": [
    "src/**/*"                           // Pasta de entrada do código-fonte
  ],
  "exclude": [
    "node_modules"                       // Exclui a pasta node_modules da compilação
  ]
}
